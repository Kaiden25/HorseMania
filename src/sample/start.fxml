                     <image>
                        <Image url="@../images/Splashscreen.png" />
                     </image>
                  </ImageView>
                  <Pane onMouseClicked="#goToRaceSelection" opacity="0.0" prefHeight="600.0" prefWidth="900.0" />
               </children>
            </Pane>
         </children>
         <columnConstraints>
            <ColumnConstraints />
