                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
                <Label fx:id="currentMoneyLabel" prefHeight="41.0" prefWidth="108.0">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
            <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#goToRaceSelection" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/home.png" />
               </image>
               <HBox.margin>
                  <Insets bottom="10.0" left="375.0" right="10.0" top="12.0" />
               </HBox.margin>
            </ImageView>
                <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#goToBank" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Bank_money.png" />
