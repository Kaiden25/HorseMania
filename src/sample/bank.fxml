    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
         <children>
            <Pane prefHeight="530.0" prefWidth="983.0" style="-fx-background-color: #ecf9f2;">
               <children>
                  <ImageView fitHeight="550.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true" />
                  <Button layoutX="42.0" layoutY="420.0" mnemonicParsing="false" onMouseClicked="#depositMoney" prefHeight="51.0" prefWidth="147.0" text="Deposit" />
